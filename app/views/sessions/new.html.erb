   <%= render "layouts/indexnav" %>
 <div class="index">
  <% if flash[:error] %>
    <div class="notice"><%= flash[:error] %></div>
  <% end %>

<%= form_for :session, url: {action: :create}, method: :post do |f| %>

	<div class="form-group">
		<%= f.label "Email" %>
		<%= f.text_field :email, placeholder: "Email" %>
	</div>

	<div class="form-group">
		<%= f.label "Password" %>
		<%= f.password_field :password %>
	</div>

	<%= f.submit "Sign In", class: "btn btn-default btn-color" %>
<% end %>

<h3>New User?</h3>
<%= link_to "Sign Up", "/signup", method: :get %>
</div>